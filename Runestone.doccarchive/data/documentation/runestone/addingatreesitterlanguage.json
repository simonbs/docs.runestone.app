/documentation\/Runestone\/TreeSitterLanguage","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"TreeSitterLanguage"}],"url":"\/documentation\/runestone\/treesitterlanguage"},"doc://Runestone/documentation/Runestone/TreeSitterLanguage/Query":{"role":"symbol","title":"TreeSitterLanguage.Query","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"Query"}],"abstract":[{"type":"text","text":"A set of patterns to be matched against the syntax tree. Queries are used for syntax highlighting and detecting injected languages."}],"identifier":"doc:\/\/Runestone\/documentation\/Runestone\/TreeSitterLanguage\/Query","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"Query"}],"url":"\/documentation\/runestone\/treesitterlanguage\/query"},"doc://Runestone/documentation/Runestone/PlainTextLanguageMode":{"role":"symbol","title":"PlainTextLanguageMode","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"PlainTextLanguageMode"}],"abstract":[{"type":"text","text":"Language mode with no syntax highlighting."}],"identifier":"doc:\/\/Runestone\/documentation\/Runestone\/PlainTextLanguageMode","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"PlainTextLanguageMode"}],"url":"\/documentation\/runestone\/plaintextlanguagemode"},"doc://Runestone/documentation/Runestone/SyntaxNode":{"role":"symbol","title":"SyntaxNode","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"SyntaxNode"}],"abstract":[{"type":"text","text":"Node in the syntax tree."}],"identifier":"doc:\/\/Runestone\/documentation\/Runestone\/SyntaxNode","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"SyntaxNode"}],"url":"\/documentation\/runestone\/syntaxnode"},"doc://Runestone/documentation/Runestone/TextView":{"role":"symbol","title":"TextView","fragments":[{"kind":"ke